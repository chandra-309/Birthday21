    <script>
        // Fungsi navigasi halaman
        function nextPage(pageNumber) {
            const pages = document.querySelectorAll('.page');
            pages.forEach(page => page.style.display = 'none');
            document.getElementById(`page-${pageNumber}`).style.display = 'block';
        }

        // Fungsi membuat animasi hati
        function createHeart() {
            const loveContainer = document.querySelector('.love-container');
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = Math.random() * 2 + 3 + 's';
            loveContainer.appendChild(heart);
            setTimeout(() => {
                heart.remove();
            }, 5000);
        }
        setInterval(createHeart, 450);

        // Kelopak bunga jatuh
        function createPetal() {
            const container = document.querySelector('.petals-container');
            const petal = document.createElement('div');
            petal.className = 'petal';
            if (Math.random() < 0.3) petal.classList.add('tiny');
            if (Math.random() > 0.7) petal.classList.add('big');
            petal.style.left = Math.random() * 100 + 'vw';
            const fallDuration = (Math.random() * 6 + 6).toFixed(1) + 's';
            const swayDuration = (Math.random() * 3 + 3).toFixed(1) + 's';
            petal.style.animationDuration = fallDuration + ', ' + swayDuration;
            container.appendChild(petal);
            setTimeout(() => petal.remove(), 12000);
        }
        setInterval(createPetal, 550);
